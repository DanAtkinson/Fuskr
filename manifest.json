{
	"manifest_version": 2,
	"name": "Fuskr",
	"version": "2.1",
	"description": "Create photo galleries from a single image based on the image name.",
	"background": {
		"scripts": [
			"Scripts/fuskr.js",
			"Scripts/background.js"
		]
	},
	"options_page": "Html/options.htm",
	"incognito": "split",
	"permissions": [
		"tabs",
		"http://*/*",
		"https://*/*",
		"contextMenus"
	],
	"homepage_url": "http://fuskr.com/",
	"offline_enabled": false,
	"icons": {
		"16": "Images/16x16.png",
		"48": "Images/48x48.png",
		"128": "Images/128x128.png"
	}
}