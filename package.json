{
	"name": "fuskr",
	"description": "Fuskr is an extension for Google Chrome which allows users to create image galleries from a single image based on their filename.",
	"version": "4.0.0",
	"main": "src/main.ts",
	"scripts": {
		"build:all": "npm run test:ci && npm run build:chromium && npm run build:firefox",
		"build:background": "webpack --config webpack.background.js",
		"build:chromium": "ng build --configuration production && npm run build:background && npm run copy:chromium-files && npm run zip:chromium",
		"build:firefox": "ng build --configuration production --output-path=dist/firefox && npm run build:background && npm run copy:firefox-files && npm run zip:firefox",
		"build": "cross-env NODE_OPTIONS=\"--max-old-space-size=4096\" ng build --configuration production",
		"clean": "powershell \"Remove-Item 'dist' -Recurse -Force -ErrorAction SilentlyContinue\"",
		"copy:chromium-files": "powershell \"Copy-Item 'src/fuskr-core.js' -Destination 'dist/chromium/fuskr-core.js'; Copy-Item 'src/_locales' -Destination 'dist/chromium/_locales' -Recurse -Force\"",
		"copy:extension-files": "npm run copy:chromium-files",
		"copy:firefox-files": "powershell \"Copy-Item 'src/fuskr-core.js' -Destination 'dist/firefox/fuskr-core.js'; Copy-Item 'src/_locales' -Destination 'dist/firefox/_locales' -Recurse -Force; Copy-Item 'src/manifest-firefox.json' -Destination 'dist/firefox/manifest.json'\"",
		"ng": "ng",
		"start": "ng serve",
		"test:ci": "ng test --watch=false --browsers=ChromeHeadless --code-coverage",
		"test:coverage": "ng test --watch=false --browsers=ChromeHeadless --code-coverage",
		"test": "ng test",
		"watch": "ng build --watch --configuration development",
		"zip:chromium": "powershell \"Compress-Archive -Path 'dist/chromium/*' -DestinationPath 'dist/fuskr-chromium.zip' -Force\"",
		"zip:firefox": "powershell \"Compress-Archive -Path 'dist/firefox/*' -DestinationPath 'dist/fuskr-firefox.zip' -Force\""
	},
	"dependencies": {
		"@angular/animations": "^20.1.2",
		"@angular/common": "^20.1.2",
		"@angular/compiler": "^20.1.2",
		"@angular/core": "^20.1.2",
		"@angular/forms": "^20.1.2",
		"@angular/platform-browser": "^20.1.2",
		"@angular/platform-browser-dynamic": "^20.1.2",
		"@angular/router": "^20.1.2",
		"@fortawesome/fontawesome-free": "^6.7.2",
		"bootstrap": "^5.3.7",
		"file-saver": "^2.0.5",
		"jszip": "^3.10.1",
		"rxjs": "~7.8.0",
		"tslib": "^2.3.0",
		"zone.js": "~0.15.1"
	},
	"devDependencies": {
		"@angular-builders/custom-webpack": "^20.0.0",
		"@angular-devkit/build-angular": "^20.1.1",
		"@angular/cli": "^20.1.1",
		"@angular/compiler-cli": "^20.1.2",
		"@types/chrome": "^0.0.258",
		"@types/file-saver": "^2.0.7",
		"@types/jasmine": "~5.1.0",
		"@types/jszip": "^3.4.0",
		"@types/node": "^24.0.14",
		"@types/webpack-env": "^1.18.8",
		"cross-env": "^7.0.3",
		"jasmine-core": "~5.1.0",
		"karma": "~6.4.0",
		"karma-chrome-launcher": "~3.2.0",
		"karma-coverage": "~2.2.0",
		"karma-jasmine": "~5.1.0",
		"karma-jasmine-html-reporter": "~2.1.0",
		"ts-loader": "^9.5.2",
		"typescript": "~5.8.3",
		"webpack": "^5.100.2",
		"webpack-cli": "^6.0.1"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/DanAtkinson/Fuskr.git"
	},
	"keywords": [
		"image",
		"slideshow"
	],
	"author": "Dan Atkinson and Jonathon Bolster",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/DanAtkinson/Fuskr/issues"
	},
	"homepage": "https://github.com/DanAtkinson/Fuskr"
}
